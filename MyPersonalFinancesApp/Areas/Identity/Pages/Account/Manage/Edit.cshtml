@page "{id:int}"
@model EditModel
@using FinanceManager.Models.Resources
@inject IStringLocalizer<CategoryEditPage> Localizer

@{
    ViewData["Title"] = Localizer["EditTitle"];
}

<div class="mb-3">
    <a asp-page="./Categories" class="btn btn-link text-secondary text-decoration-none">&lt; @Localizer["BackToManage"]</a>
</div>

<div class="mb-3">
    <a asp-page="./Security" class="btn btn-link text-secondary text-decoration-none">&lt; Back to Security Settings</a>
</div>

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Input.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name">@Localizer["CategoryName"]</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Color" class="form-label">@Localizer["CategoryColor"]</label>
                <input asp-for="Input.Color" type="color" class="form-control form-control-color" />
                <span asp-validation-for="Input.Color" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">@Localizer["SaveChangesBtn"]</button>
        </form>
    </div>
</div>