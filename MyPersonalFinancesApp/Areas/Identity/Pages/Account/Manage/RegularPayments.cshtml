@page
@model RegularPaymentsModel
@using FinanceManager.Models.Resources
@inject IStringLocalizer<RegularPaymentsPage> Localizer
@inject IStringLocalizer<SharedStrings> SharedLocalizer
@inject IStringLocalizer<CategoriesDefault> CategoryLocalizer

@{
    ViewData["Title"] = Localizer["Title"];

    string FormatCurrency(decimal amount, Currency currency)
    {
        var symbol = currency switch
        {
            Currency.USD => "$",
            Currency.EUR => "€",
            Currency.UAH => "₴",
            _ => ""
        };
        return $"{symbol}{amount.ToString("N2", System.Globalization.CultureInfo.InvariantCulture)}";
    }

    string LocalizeCategory(string categoryName)
    {
        if (string.IsNullOrEmpty(categoryName)) { return ""; }
        var localized = CategoryLocalizer[categoryName.Replace(" ", "_")];
        return localized.ResourceNotFound ? categoryName : localized;
    }
}

<!-- Back Button -->
<div class="mb-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-link text-secondary text-decoration-none">&lt; @SharedLocalizer["BackToDashboard"]</a>
</div>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>@ViewData["Title"]</h3>
    <a asp-page="./CreateRegularPayment" class="btn btn-primary">@Localizer["CreateNew"]</a>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>@Localizer["ColName"]</th>
                <th>@Localizer["ColNextRun"]</th>
                <th>@Localizer["ColAmount"]</th>
                <th>@Localizer["ColFrequency"]</th>
                <th>@Localizer["ColStatus"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vm in Model.Payments)
            {
                <tr>
                    <td>@vm.Payment.Name <br /><small class="text-muted">@vm.Payment.Account.Name / @LocalizeCategory(vm.Payment.Category.Name)</small></td>
                    <td>@vm.Payment.NextRunDate.ToString("g")</td>
                    <td class="@(vm.Payment.Type == CategoryType.Income ? "text-success" : "text-danger")">
                        <strong>@(vm.Payment.Type == CategoryType.Income ? "+" : "-")@FormatCurrency(vm.Payment.Amount, vm.Payment.Account.Currency)</strong>
                    </td>
                    <td>@vm.FormattedFrequency</td>
                    <td>
                        @if (vm.Payment.IsActive)
                        {
                            <span class="badge bg-success">@Localizer["Active"]</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Localizer["Cancelled"]</span>
                        }
                    </td>
                    <td class="text-end">
                        @if (vm.Payment.StartDate >= DateTime.Today)
                        {
                            <a asp-page="./EditRegularPayment" asp-route-id="@vm.Payment.Id" class="btn btn-sm btn-outline-secondary">@Localizer["Edit"]</a>
                        }

                        <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@vm.Payment.Id" class="d-inline ms-1">
                            <button type="submit" class="btn btn-sm btn-outline-warning">@(vm.Payment.IsActive? Localizer["Cancel"] : Localizer["Reinstate"])</button>
                        </form>

                        @if (vm.Payment.StartDate >= DateTime.Today)
                        {
                            <form method="post" asp-page-handler="Delete" asp-route-id="@vm.Payment.Id" class="d-inline ms-1">
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('@Localizer["ConfirmDelete"]');">@Localizer["Delete"]</button>
                            </form>
                        }
                    </td>
                </tr>
            }
            @if (!Model.Payments.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">@Localizer["NoPayments"]</td>
                </tr>
            }
        </tbody>
    </table>
</div>