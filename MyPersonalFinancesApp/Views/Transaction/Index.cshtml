@model IEnumerable<FinanceManager.Models.Transaction>
@{
    var localizer = LocalizerFactory.Create("HistoryPage", "FinanceManager");
    var sharedLocalizer = LocalizerFactory.Create("SharedStrings", "FinanceManager");

    var type = ViewData["TransactionType"] as string;
    var typeString = type == "Income" ? sharedLocalizer["Income"].Value : sharedLocalizer["Expenses"].Value;
    ViewData["Title"] = $"{typeString} {localizer["History"]}";

    string FormatCurrency(decimal amount, Currency currency)
    {
        var symbol = currency switch
        {
            Currency.USD => "$",
            Currency.EUR => "€",
            Currency.UAH => "₴",
            _ => ""
        };
        return $"{symbol}{amount.ToString("N2", System.Globalization.CultureInfo.InvariantCulture)}";
    }
}

<!-- Back Button -->
<div class="mb-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-link text-secondary text-decoration-none">&lt; @sharedLocalizer["BackToDashboard"]</a>
</div>

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@localizer["Date"]</th>
            <th>@localizer["Category"]</th>
            <th>@localizer["Account"]</th>
            <th>@localizer["Amount"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToString("g")</td>
                <td>@item.Category.Name</td>
                <td>@item.Account.Name</td>
                <td>@FormatCurrency(item.Amount, item.Account.Currency)</td>
            </tr>
        }
    </tbody>
</table>